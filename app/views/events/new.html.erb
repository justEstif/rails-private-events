<h1>New event</h1>
<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name %><br/>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :location %><br/>
    <%= form.text_field :location %>
  </div>
  <div>
    <%= form.label :date %><br/>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
